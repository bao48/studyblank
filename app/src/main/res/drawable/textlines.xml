<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape
            android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/colorPrimaryDark" />
            <solid android:color="@color/defaultBackground" />
        </shape>
    </item>

    <item android:bottom="3dp">
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="@color/defaultBackground" />
            <solid android:color="@color/defaultBackground" />
        </shape>
    </item>

    <item android:bottom="10dp">
        <bitmap android:gravity="right|end|bottom"
            android:src="@drawable/ic_action_next_item" />
    </item>

</layer-list>
